<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.uninove.primeiraconsulta">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.PrimeiraConsulta"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.menu.MenuActivity"></activity>
        <activity android:name=".activity.cadastro.CadastroUsuarioActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".activity.prontuario.NovoProntuarioActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".activity.prontuario.VerProntuarioActivity"></activity>
        <activity android:name=".activity.prontuario.ListarProntuariosActivity"></activity>
        <activity android:name=".activity.prontuario.LogProntuarioActivity"></activity>
        <activity android:name=".activity.prontuario.EditarProntuarioActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".activity.prontuario.excluir.ExcluirLogActivity"></activity>
        <activity android:name=".activity.prontuario.excluir.ExcluirProntuarioActivity"></activity>
    </application>

</manifest>