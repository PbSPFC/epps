<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/cadastro_de_aluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

            <TextView
                android:text="Nome:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_cad_1"
                android:layout_alignStart="@+id/tv_cad_1"
                android:id="@+id/textView4"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/ed_cad_ra" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ed_cad_nome"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignLeft="@+id/ed_cad_ra"
                android:layout_alignStart="@+id/ed_cad_ra" />

            <TextView
                android:text="@string/ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_cad_2"
                android:layout_alignLeft="@+id/tv_cad_2"
                android:layout_alignStart="@+id/tv_cad_2"
                android:layout_marginBottom="18dp"
                android:id="@+id/tv_cad_1"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/ed_cad_ra"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/tv_cad_1"
                android:layout_alignBottom="@+id/tv_cad_1"
                android:layout_toRightOf="@+id/tv_cad_2"
                android:layout_toEndOf="@+id/tv_cad_2"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:inputType="number" />

            <TextView
                android:text="@string/senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/tv_cad_2"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ed_cad_senha"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/tv_cad_2"
                android:layout_alignBottom="@+id/tv_cad_2"
                android:layout_alignLeft="@+id/ed_cad_ra"
                android:layout_alignStart="@+id/ed_cad_ra" />

            <Button
                android:text="Cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_cad_cadastrar"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/ed_cad_senha"
                android:layout_centerHorizontal="true"
                android:elevation="5dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>