<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gordura / Colesterol: "
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:id="@+id/rg_editar_gordura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_editar_gordura_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7 vezes na semana ou mais: Frango com pele, carne com gordura, miúdos, frituras." />

        <RadioButton
            android:id="@+id/rb_editar_gordura_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abaixo de 7 vezes." />
    </RadioGroup>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fibra: "
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:id="@+id/rg_editar_fibra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_editar_fibra_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menos de 5 porções de frutas, verduras e hortaliças por dia.
            " />

        <RadioButton
            android:id="@+id/rb_editar_fibra_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recomendação da ingestão diária de 400 gramas de frutas e hortaliças (WHO, 2003), o que seria equivalente, aproximadamente, ao consumo diário de cinco porções desses alimentos." />
    </RadioGroup>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cálcio: "
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:id="@+id/rg_editar_calcio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_editar_calcio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menos de 3 porções de laticínios por semana." />

        <RadioButton
            android:id="@+id/rb_editar_calcio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 porções ou mais por semana." />
    </RadioGroup>
</LinearLayout>