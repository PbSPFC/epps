<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/include_editar_prontuario" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_estilo_de_vida" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_estilo_de_vida_2" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_estilo_de_vida_3" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_estilo_de_vida_4" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_estilo_de_vida_5" android:layout_width="match_parent" />

            <include layout="@layout/include_editar_exame_fisico" android:layout_width="match_parent" />

            <TextView
                android:text="ComentÃ¡rio Final: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView112"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/ed_editar_comentarioFinal"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Salvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_editar_salvar"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_novo_1"
                    android:layout_alignStart="@+id/tv_novo_1"
                    android:layout_weight="1" />

                <Button
                    android:text="Voltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_editar_voltar"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tv_novo_1"
                    android:layout_alignEnd="@+id/tv_novo_1"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>