<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/sv_menu_scroll"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:id="@+id/relative_layout">

            <TextView
                android:text="RA:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_1"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_ra"
                android:layout_alignBaseline="@+id/tv_menu_1"
                android:layout_alignBottom="@+id/tv_menu_1"
                android:layout_toRightOf="@+id/tv_menu_1"
                android:layout_toEndOf="@+id/tv_menu_1"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp" />

            <TextView
                android:text="@string/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_2"
                tools:text="Status"
                android:layout_below="@+id/tv_menu_1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_status"
                android:layout_below="@+id/tv_menu_ra"
                android:layout_alignLeft="@+id/tv_menu_ra"
                android:layout_alignStart="@+id/tv_menu_ra" />

            <TextView
                android:text="@string/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_3"
                android:layout_below="@+id/tv_menu_2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_nome"
                android:layout_below="@+id/tv_menu_status"
                android:layout_alignLeft="@+id/tv_menu_status"
                android:layout_alignStart="@+id/tv_menu_status" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>