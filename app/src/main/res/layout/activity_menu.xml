<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/sv_menu_scroll"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:id="@+id/relative_layout">

            <TextView
                android:text="@string/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_2"
                tools:text="Status"
                android:layout_below="@+id/tv_menu_1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_status"
                android:layout_below="@+id/tv_menu_ra"
                android:layout_alignLeft="@+id/tv_menu_ra"
                android:layout_alignStart="@+id/tv_menu_ra"
                android:textSize="18sp" />

            <TextView
                android:text="@string/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_3"
                android:layout_below="@+id/tv_menu_2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_nome"
                android:layout_below="@+id/tv_menu_status"
                android:layout_alignLeft="@+id/tv_menu_status"
                android:layout_alignStart="@+id/tv_menu_status"
                android:textSize="18sp" />

            <TextView
                android:text="@string/crm_ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_1"
                android:layout_marginTop="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_menu_ra"
                android:textSize="18sp"
                android:layout_above="@+id/tv_menu_2"
                android:layout_toRightOf="@+id/tv_menu_3"
                android:layout_toEndOf="@+id/tv_menu_3"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <Button
                android:text="@string/cadastrar_aluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_menu_cadastrar"
                android:layout_below="@+id/tv_menu_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp" />

            <Button
                android:text="@string/novo_prontuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_menu_novo_prontuario"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/bt_menu_cadastrar"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="@string/ver_prontuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_menu_listar_prontuarios"
                android:layout_below="@+id/bt_menu_novo_prontuario"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <Button
                android:text="@string/sair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_menu_sair"
                android:layout_below="@+id/bt_menu_listar_prontuarios"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>